{% extends 'base.html.twig' %}

{% block body %}
{% if form is defined %}
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    <div class="row">
      <!-- formulaire de connexion -->
      <div class="col-md-6">
          <h1>connexion</h1>
          <div class="row">  
              <div class="form-group" id="pseudo">
                  {{ form_label(form.pseudo, "Pseudo", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                  <div class="col-md-6">
                    {{ form_widget(form.pseudo, {'attr': {'class': 'form-control'}}) }}
                  </div>
              </div>
              <div class="form-group">
                {{ form_label(form.mdp, "Mot de passe", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-md-6"> 
                  {{ form_widget(form.mdp, {'attr': {'class': 'form-control'}}) }}
                </div>
              </div>
            <div class="form-group"> 
              <div class="col-sm-offset-2 col-sm-10">
                {{ form_label(form.connexion, "connexion", {'label_attr': {'class': 'col-sm-offset-2 col-sm-10'}}) }}
                {{ form_widget(form.connexion, {'attr': {'class': 'btn btn-primary'}}) }}
              </div>
            </div>
        </div>
      </div>
      <!-- formulaire d'inscription -->
      <div class="col-md-6">
        
      </div>
  </div>
  {{ form_end(form) }}
    {% endif %}
    {% if pseudo is defined %}
      {% if pseudo == true %}
        <h1>{{ pseudo }} trouve</h1>
        
      {% else %}
        <h3>{{ pseudo }} pas trouve</h3>
          <script type="text/javascript">
            //$("#pseudo").change(function () {
              $('#pseudo').addClass('has-error');
            //});
          </script>
      {% endif %}

    {% endif %}
    
{% endblock %}
